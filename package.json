{
  "name": "back",
  "version": "1.0.0",
  "description": "backend for mental arithmetic learning app",
  "main": "index.js",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node --require dotenv/config dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --require dotenv/config --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "author": "Simon Karasik",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "mongoose": "^4.13.11",
    "body-parser": "^1.18.3",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "connect-mongo": "^2.0.1"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.13.0",
    "typescript": "^2.9.2",
    "ts-node": "~5.0.1",
    "tslint-config-airbnb": "^5.9.2",
    "tslint": "~5.9.1",
    "@types/node": "^10.5.2",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/mongoose": "^5.2.3",
    "concurrently": "^3.5.1",
    "jest": "^22.0.4",
    "nodemon": "^1.13.0",
    "shelljs": "^0.8.1"
  }
}
